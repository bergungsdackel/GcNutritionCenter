             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GcNutritionCenter"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#9199a3">
        <StackPanel Margin="30">
            <CheckBox x:Name="checkBoxCustomerDeleteIfZero" Content="Kunden automatisch löschen, wenn Guthaben bei 0€" Style="{DynamicResource SliderCheckBox}" IsChecked="{Binding DeleteCustomerIfZero}"/>
        </StackPanel>

    </Grid>
</UserControl>
